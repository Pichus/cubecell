<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:pages="clr-namespace:CubeCell.App.ViewModels.Pages"
             x:DataType="pages:WelcomePageViewModel"
             mc:Ignorable="d"
             d:DesignWidth="850" d:DesignHeight="500"
             x:Class="CubeCell.App.Views.WelcomePage"
             Background="#F3F3F3">

    <Border MaxWidth="900"
            Background="White"
            CornerRadius="6"
            BorderBrush="#D0D0D0"
            BorderThickness="1"
            Padding="0"
            Margin="20"
            VerticalAlignment="Center"
            HorizontalAlignment="Stretch">

        <Grid ColumnDefinitions="Auto,1,*">

            <!-- LEFT PANEL -->
            <Border Background="#F9FAF9"
                    BorderBrush="#E0E0E0"
                    BorderThickness="0,0,1,0"
                    Padding="24">
                <Grid RowDefinitions="*,Auto">

                    <!-- Main content -->
                    <StackPanel Grid.Row="0" Spacing="20" MinWidth="220">

                        <!-- Header -->
                        <StackPanel Spacing="4">
                            <TextBlock Text="CubeCell"
                                       FontSize="26"
                                       FontWeight="Bold"
                                       Foreground="#107C41" />
                            <TextBlock Text="Work with your spreadsheets"
                                       FontSize="13"
                                       Foreground="#666" />
                        </StackPanel>

                        <!-- Create Section -->
                        <StackPanel Spacing="12">
                            <TextBlock Text="Create New"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="#107C41"
                                       Margin="0,4,0,0" />

                            <!-- Rows -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Rows"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#333" />
                                <TextBox Text="{Binding RowCount}"
                                         Padding="8,6"
                                         BorderBrush="#CFCFCF"
                                         BorderThickness="1"
                                         CornerRadius="2"
                                         Watermark="Enter number of rows" />
                            </StackPanel>

                            <!-- Columns -->
                            <StackPanel Spacing="4">
                                <TextBlock Text="Columns"
                                           FontSize="12"
                                           FontWeight="SemiBold"
                                           Foreground="#333" />
                                <TextBox Text="{Binding ColCount}"
                                         Padding="8,6"
                                         BorderBrush="#CFCFCF"
                                         BorderThickness="1"
                                         CornerRadius="2"
                                         Watermark="Enter number of columns" />
                            </StackPanel>

                            <Button Command="{Binding GoToSpreadSheetEditorPageCommand}"
                                    Background="#107C41"
                                    Foreground="White"
                                    Padding="12,8"
                                    CornerRadius="2"
                                    FontSize="13"
                                    FontWeight="SemiBold"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Cursor="Hand"
                                    Margin="0,8,0,0">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#0E6E3A" />
                                    </Style>
                                </Button.Styles>
                                Create Spreadsheet
                            </Button>
                        </StackPanel>

                        <!-- Divider -->
                        <Grid ColumnDefinitions="*,Auto,*" Margin="0,8,0,0">
                            <Border Grid.Column="0" Height="1" Background="#E0E0E0" VerticalAlignment="Center" />
                            <TextBlock Grid.Column="1"
                                       Text="or"
                                       Foreground="#888"
                                       FontSize="12"
                                       Margin="8,0" />
                            <Border Grid.Column="2" Height="1" Background="#E0E0E0" VerticalAlignment="Center" />
                        </Grid>

                        <!-- Open Existing -->
                        <StackPanel Spacing="10">
                            <TextBlock Text="Open Existing"
                                       FontSize="15"
                                       FontWeight="SemiBold"
                                       Foreground="#107C41"
                                       Margin="0,4,0,0" />

                            <Button Background="White"
                                    Foreground="#333"
                                    BorderBrush="#CFCFCF"
                                    BorderThickness="1"
                                    Padding="10,8"
                                    CornerRadius="2"
                                    FontSize="13"
                                    HorizontalAlignment="Stretch"
                                    HorizontalContentAlignment="Center"
                                    Cursor="Hand"
                                    Click="OpenFileButton_OnClick">
                                <Button.Styles>
                                    <Style Selector="Button:pointerover">
                                        <Setter Property="Background" Value="#F3F3F3" />
                                    </Style>
                                </Button.Styles>
                                ðŸ“‚ Browse Files
                            </Button>
                        </StackPanel>
                    </StackPanel>

                    <!-- Bottom section -->
                    <StackPanel Grid.Row="1" Spacing="12">
                        <Border Height="1" Background="#E0E0E0" />

                        <Button Command="{Binding GoToAboutPageCommand}"
                                Background="Transparent"
                                Foreground="#107C41"
                                BorderThickness="0"
                                FontSize="12"
                                Padding="0"
                                HorizontalAlignment="Center"
                                Cursor="Hand">
                            <Button.Styles>
                                <Style Selector="Button:pointerover">
                                    <Setter Property="Foreground" Value="#0C5C34" />
                                </Style>
                            </Button.Styles>
                            About CubeCell
                        </Button>
                    </StackPanel>
                </Grid>
            </Border>

            <Border Grid.Column="2">
                <StackPanel>
                    <Button IsEnabled="{Binding !UserAuthorized}" Command="{Binding SignInWithGoogleCommand}">
                        Load files from drive
                    </Button>
                    <ScrollViewer>
                        <ItemsControl ItemsSource="{Binding FileViewModels}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Content="{Binding Name}"
                                            Command="{Binding $parent[ItemsControl].((pages:WelcomePageViewModel)DataContext).OpenCloudFileCommand}"
                                            CommandParameter="{Binding}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</UserControl>